<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/incident_item_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_incident_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/incident_item_text_color"
            tools:text="ΠΕΡΙΦΕΡΕΙΑ ΚΕΝΤΡΙΚΗΣ ΜΑΚΕΔΟΝΙΑΣ\nΔ. ΚΑΛΑΜΑΡΙΑΣ - ΚΑΛΑΜΑΡΙΑΣ\nΑΣΤΙΚΗ ΠΥΡΚΑΓΙΑ" />

        <TextView
            android:id="@+id/textView_incident_last_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/incident_item_text_color"
            tools:text="Τελευταία Ενημέρωση πριν από 5 λεπτά" />

        <TextView
            android:id="@+id/textView_incident_id_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/incident_item_text_color"
            android:textSize="12sp"
            android:visibility="gone"
            tools:text="ID: 12345"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>